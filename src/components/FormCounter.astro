<article>
  <div class="remove">
    <img src="/img/svg/remove.svg" alt="minus ikon" class="icon" />
  </div>
  <div class="number">
    <p>1</p>
  </div>
  <div class="add">
    <img src="/img/svg/add.svg" alt="plus ikon" class="icon" />
  </div>
</article>

<style>
  article {
    display: flex;
  }

  img {
    height: 100%;
  }
  div {
    background-color: var(--surface-form);
    border: var(--border_m) solid var(--border-primary-default);
    padding: var(--spacing_3);
  }

  .remove {
    padding-left: var(--spacing_6);
    border-right: none;
    border-radius: var(--radius_max) 0 0 var(--radius_max);
  }
  .add {
    padding-right: var(--spacing_6);
    border-left: none;
    border-radius: 0 var(--radius_max) var(--radius_max) 0;
  }
  .number {
    border-right: none;
    border-left: none;
    padding-right: var(--spacing_6);
    padding-left: var(--spacing_6);
  }

  /* HOVER */
  .remove:hover,
  .add:hover {
    background-color: var(--surface-form-active);
    border-color: var(--border-primary-active);
  }
</style>
