      <!-- Herter dataen for hvert element som er lig eller over 6, og laver et CardProduct med den, som ligger i en div, som ikke kan ses (pga class 'hide') -->
      <!-- <div class="extra hide">
        {
          data.map((product, i) => {
            if (i >= 8) {
              return <CardProduct data={product} />;
            }
          })
        }
