---
const { type, title } = Astro.props;
---

<details class={type}>
  <summary>
    <p class="heading">{title}</p>
  </summary>
  <article>
    <slot />
  </article>
</details>

<style>
  details {
    background-color: var(--surface-navigation);
    padding: var(--spacing_2) 0 0;
    width: 100%;
    height: fit-content;
  }

  /* Summary styling and placement */
  summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font_body);
    font-size: 1rem;
    color: var(--text-body-primary);
    cursor: pointer;
  }
  .heading {
    font-size: 1.125rem;
    text-transform: uppercase;
  }

  /* article padding */
  article {
    display: flex;
    flex-direction: column;
    gap: var(--spacing_2);
    padding: var(--spacing_2) 0 var(--spacing_4) var(--spacing_4);
  }

  /* Arrow icon */
  details summary::after {
    /* content: url(/img/svg/arrow_down.svg); */
    content: url(/img/svg/arrow_down.svg);
  }
  details[open] > summary::after {
    transform: rotate(-180deg);
  }

  /* TYPE */
  .nav .heading {
    font-size: 1rem;
  }
</style>
