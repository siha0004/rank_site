  </section>

  <style>
    section {
      display: flex;
      flex-direction: column;
      gap: var(--spacing_5);
      margin: var(--spacing_6);
    }

    .menu {
      display: flex;

      gap: var(--spacing_4);
    }

    .products {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: var(--spacing_5);
    }

    @media (min-width: 800px) {
      .menu {
        flex-direction: column;
      }

      section {
        display: grid;
        grid-template-columns: 1fr 3fr;
        margin: 0 var(--spacing_13);
      }
      .products {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: var(--spacing_5);
      }
    }
  </style>
</MainLayouts>
