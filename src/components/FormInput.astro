---
const { type, text } = Astro.props;
---

<form class={type} netlify>
  <input type="email" name="email" placeholder="Indtast din e-mail" autocomplete="email" required />
  <input type="submit" value={text} class="button" />
</form>

<style>
  /* TYPES OF FORMS */
  .nyhed,
  .udsolgt {
    display: flex;
    flex-direction: row;
    gap: var(--spacing_3);
  }
  .udsolgt input {
    color: var(--text-body-primary);
    background-color: var(--surface-form);
    border: var(--border_m) solid var(--border-primary-default);
    width: 100%;
  }
  .udsolgt .button {
    color: var(--surface-cta);
    background-color: transparent;
    border-color: var(--surface-cta);
  }

  /* GENEREL STYLING */
  input,
  .button {
    font-family: var(--font_body);
    font-size: 1rem;
    padding: var(--spacing_4) var(--spacing_6);
    border-radius: var(--radius_max);
  }

  /* INPUT STYLING */
  input {
    color: var(--text-body-primary);
    background-color: var(--surface-form);
    border: var(--border_m) solid var(--primary_600);
  }

  input:focus,
  .udsolgt input:focus {
    border: var(--border_m) solid var(--primary_700);
    outline: none;
  }

  /* BUTTON STYLING */
  .button {
    color: var(--surface-cta);
    border: var(--border_m) solid var(--surface-cta);
    cursor: pointer;
  }
  .button:hover {
    box-shadow:
      0px 1px 3px rgba(210, 210, 210, 0.8),
      0px 4px 10px rgba(210, 210, 210, 0.8);
  }
</style>
