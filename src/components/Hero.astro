---
import Button from "../components/Button.astro";

const { img, heading, button, button_txt, side } = Astro.props;
---

<section>
  <img src=`/img/webp/${img}` alt="Billede af produkter" />
  <article class={side}>
    <h1>{heading}</h1>
    <p>
      <slot />
    </p>
    <div class=`top ${button}`>
      <Button type="primary" link="/products">{button_txt}</Button>
    </div>
  </article>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    /* gap: var(--spacing_5);
    /* margin: 0 0 var(--spacing_9); */
  }

  article {
    display: flex;
    flex-direction: column;
    gap: var(--spacing_5);
    padding: var(--spacing_5);
  }

  .top {
    margin-top: var(--spacing_2);
  }

  @media (min-width: 500px) {
    p {
      font-size: 1.25rem;
    }
  }
  @media (min-width: 1000px) {
    section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing_5);
    }

    img {
      grid-column: 1 / span 2;
      grid-row: 1 / span 1;
    }

    article {
      grid-column: 2 / span 1;
      grid-row: 1 / span 1;
      align-self: center;
      padding: 0px 100px;
    }

    p {
      font-size: 1.25rem;
    }

    .right {
      grid-column: 1 / span 1;
      grid-row: 1 / span 1;
    }

    /* img {
      position: relative;
      z-index: 1;
    }
    article {
      position: absolute;
      z-index: 2;
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      align-items: center;
    }
    .placing {
      display: grid;
      grid-column: 2;
      padding: 0px 100px;
      gap: var(--spacing_5);
    } */
  }

  .hide {
    display: none;
  }
</style>
