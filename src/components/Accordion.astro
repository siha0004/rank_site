---
const { type, title } = Astro.props;
---

<details class={type}>
  <summary>{title}</summary>
  <article>
    <slot />
  </article>
</details>

<style>
  /***** Header Accordion ******/
  .header {
  }

  /* Filter detail margin */
  .filter {
    border-top: var(--spacing_1) solid var(--secondary_200);
  }

  /* Summary styling and placement */
  summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font_body);
    font-weight: 300;
    font-size: 1rem;
    text-transform: uppercase;
    color: var(--text-body-primary);
    padding: var(--spacing_4) var(--spacing_3);
    cursor: pointer;
  }

  /* Footer summary */
  .footer summary {
    border-bottom: var(--spacing_1) solid var(--primary_600);
  }

  /* article padding */
  article {
    padding: var(--spacing_3) var(--spacing_3) var(--spacing_6);
  }

  /* Arrow icon */
  details summary::after {
    /* content: url(/img/svg/arrow_down.svg); */
    content: url(/img/svg/arrow_down.svg);
  }
  details[open] > summary::after {
    transform: rotate(-180deg);
  }
</style>
